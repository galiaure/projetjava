package hb.utils;

public class WordManager {
	
	public String reverseString(String args) {
		String reverseString = args;
		
		for (int i = args.length() -1 ; i >=0; i-- ){
			 reverseString = reverseString.concat(String.valueOf(args.charAt(i)));
		}
		return reverseString;
	}
	
	public String encodeStringStart0 (String args, int n) {
		String encodeString = args;
		
		if(n<6 && n>=0 ){
			n=n;
		}else{
			logger.error("l'argument doit être compris entre 0 et 5 ");
		}
		
		
		for (int i = args.length() -1 ; i >=0; i-- ){
			encodeString = encodeString.concat(String.valueOf(args.charAt(i)));
		}
		return encodeString;
	}
	
	

}
