package hb.controller;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;

import hb.projo.Animal;

@Path("/webservice")
public class HelloController {
	
	public List<Animal> Animals;
	
	
	public HelloController() {
		
		Animals = new ArrayList<Animal>();
		
		User u1 = new User("Vache","étable mheuu",10,4);
		Users.add(u1);
		User u2 = new User("Cynthia","Louis",22);
		Users.add(u2);
		User u3 = new User("Gerard","Dubois",55);
		Users.add(u3);
	
	}
	
	@GET
	@Path("/ListUsers")
	@Produces("text/plain")
	public String getUsersName() {
		String[] names = new String[Users.size()];
		int count = 0;
		for(User u:Users){
			names[count] = u.getName();
			count++;
		}
		return Arrays.toString(names);
	}
	
	@GET
	@Path("/json/ListUsers")
	@Produces("application/json")
	public List<User> getUsersJson(){
		return Users;
	}
	
	@GET
	@Path("/ListUsersBis")
	@Produces("application/xml")
	public List<User> getUsers(){
		return Users;
	}

	@GET
	@Path("/message/{message}")
	@Produces("text/plain")
	public String showMsg(@PathParam("message") String message){
		return message;
	}
	

	
	
	
}
