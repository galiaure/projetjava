
<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.7.0.xsd">
  <!-- Configure the database connection here -->
  <jdbc>
    <driver>com.mysql.jdbc.Driver</driver>
    <url>jdbc:mysql://localhost:3306/cours_jdbc</url>
    <user>root</user>
    <password></password>
  </jdbc>
  <generator>
    <!-- The default code generator. -->
    <name>org.jooq.util.JavaGenerator</name>
    <database>
      <!-- The database type. The format here is:
           org.util.[database].[database]Database -->
      <name>org.jooq.util.mysql.MySQLDatabase</name>
      <!-- database name to be generated -->
      <inputSchema>cours_jdbc</inputSchema>
      <!-- All elements that are generated from your schema -->
      <includes>.*</includes>
      <!-- All elements that are excluded from your schema -->
      <excludes></excludes>
    </database>
    <target>
      <!-- The destination package of your generated classes (within the destination directory) -->
      <packageName>com.humanbooster.mock.generated</packageName>
      <!-- The destination directory of your generated classes -->
      <directory>C:\\Users\\safia\\workspace2\\cours-JDBC\\src</directory>
    </target>
  </generator>
</configuration>


